{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/api/main.go",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Tailwind Watcher",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "css:watch"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Launch Full App (Go + Tailwind)",
            "configurations": [
                "Launch Go Backend",
                "Launch Tailwind Watcher"
            ]
        }
    ]
}
